{
    "name": "web-slinger/stored-procedure-bundle",
    "description": "A reusable factory for executing stored procedures on MSSQL databases using PDO and SqlSrv",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Justin Connell",
            "email": "me@justinconnell.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "sentry/sentry": "^3.0|^4.0",
        "symfony/dependency-injection": "^5.4|^6.0|^7.0",
        "symfony/config": "^5.4|^6.0|^7.0",
        "symfony/http-kernel": "^5.4|^6.0|^7.0",
        "symfony/yaml": "^5.4|^6.0|^7.0"
    },
    "suggest": {
        "ext-sqlsrv": "For native SQL Server support"
    },
    "autoload": {
        "psr-4": {
            "WebSlinger\\StoredProcedureFactory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WebSlinger\\StoredProcedureFactory\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
